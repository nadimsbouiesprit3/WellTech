{% extends 'front/base.html.twig' %}

{% block title %}Edit Order{% endblock %}

{% block body %}
    <h1>Edit Order</h1>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        <div class="form-group row">
            {{ form_label(form.customer, 'Customer', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.customer, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.total, 'Total', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.total, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.status, 'Status', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.status, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.shipping_address, 'Shipping Address', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.shipping_address, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.payment_method, 'Payment Method', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.payment_method, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-warning">Update</button>
            </div>
        </div>
    {{ form_end(form) }}

    <a href="{{ path('order_index') }}" class="btn btn-primary">Back to list</a>

    {{ form_start(delete_form, {'attr': {'class': 'form-inline'}}) }}
        <button class="btn btn-danger">Delete</button>
    {{ form_end(delete_form) }}
{% endblock %}
