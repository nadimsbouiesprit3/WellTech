{% extends 'front/base.html.twig' %}

{% block title %}Order Index{% endblock %}

{% block body %}
    <h1>Order Index</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Customer</th>
                <th>Total</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for order in orders %}
                <tr>
                    <td>{{ order.id }}</td>
                    <td>{{ order.customer }}</td>
                    <td>{{ order.total }}</td>
                    <td>{{ order.status }}</td>
                    <td>
                        <a href="{{ path('order_show', {'id': order.id}) }}" class="btn btn-info btn-sm">show</a>
                        <a href="{{ path('order_edit', {'id': order.id}) }}" class="btn btn-warning btn-sm">edit</a>
                        <form method="post" action="{{ path('order_delete', {'id': order.id}) }}" style="display:inline-block;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
                            <button class="btn btn-danger btn-sm">delete</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('order_new') }}" class="btn btn-success">Create new</a>
{% endblock %}
