{% extends 'front/base.html.twig' %}

{% block title %}products{% endblock %}

{% block body %}
    <h1>Product Index</h1>

    <div class="row">
        {% for product in products %}
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">{{ product.description }}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="{{ path('product_show', {'id': product.id}) }}" class="btn btn-sm btn-outline-secondary">View</a>
                                <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-sm btn-outline-secondary">Edit</a>
                            </div>
                                <button class="btn btn-sm btn-primary">Add to Cart</button>
                            </form>
                            <small class="text-muted">{{ product.price }} $</small>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <a href="{{ path('product_new') }}" class="btn btn-success">Create new</a>
{% endblock %}
