{% extends 'front/base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
    <h1>Edit Product</h1>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        <div class="form-group row">
            {{ form_label(form.name, 'Name', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.price, 'Price', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.price, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.category, 'Category', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.category, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.stock, 'Stock', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.stock, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-warning">Update</button>
            </div>
        </div>
    {{ form_end(form) }}

    <a href="{{ path('product_index') }}" class="btn btn-primary">Back to list</a>

    {{ form_start(delete_form, {'attr': {'class': 'form-inline'}}) }}
        <button class="btn btn-danger">Delete</button>
    {{ form_end(delete_form) }}
{% endblock %}