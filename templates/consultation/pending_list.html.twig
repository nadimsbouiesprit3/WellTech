{% extends 'base.html.twig' %}

{% block title %}Pending Consultations{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="text-center mb-4">Pending Consultations</h1>

    {% if consultations is empty %}
        <p class="text-center">No pending consultations.</p>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>Patient</th>
                    <th>Consultation Date</th>
                    <th>Created At</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for consultation in consultations %}
                    <tr>
                        <td>{{ consultation.patient.email }}</td>
                        <td>{{ consultation.consultationDate|date('Y-m-d H:i') }}</td>
                        <td>{{ consultation.createdAt|date('Y-m-d H:i') }}</td>
                        <td>{{ consultation.statut }}</td>
                        <td>
                            <a href="{{ path('consultation_accept', {'id': consultation.id}) }}" class="btn btn-success">Accept</a>
                            <a href="{{ path('consultation_decline', {'id': consultation.id}) }}" class="btn btn-danger">Decline</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}
