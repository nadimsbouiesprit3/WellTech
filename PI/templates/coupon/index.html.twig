{% extends 'base.html.twig' %}

{% block title %}Coupon index{% endblock %}

{% block body %}
    <h1>Coupon index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Discount</th>
                <th>Expires_at</th>
                <th>Is_active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for coupon in coupons %}
            <tr>
                <td>{{ coupon.id }}</td>
                <td>{{ coupon.code }}</td>
                <td>{{ coupon.discount }}</td>
                <td>{{ coupon.expiresAt ? coupon.expiresAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ coupon.isActive ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_coupon_show', {'id': coupon.id}) }}">show</a>
                    <a href="{{ path('app_coupon_edit', {'id': coupon.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_coupon_new') }}">Create new</a>
{% endblock %}
